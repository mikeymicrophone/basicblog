#months
  - months.each do |name,month|
    = link_to(name, url(:controller => "posts", :action => :month_of , :month => month))
= link_to 'write a new post', '/posts/new'
#posts
  - @posts.each do |p|
    .post 
      .title= p.title
      .link= link_to('visit', url(:post, p))
      .date= p.created_at.strftime("%m/%y") if p.created_at
      .post_body= textilized(p)
      .comment_count= p.comments.length.to_s + ' comments' + p.recent_comment_stamp
      .comment_link= link_to('comment', url(:post, p) + '&comment=true')
    %hr